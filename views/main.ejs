<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Dashboard</title>
  <link rel="stylesheet" href="/stylesheets/main.css" />
</head>

<body>

  <div class="container">
    <h1>Welcome, <%= user.name %> üëã</h1>
    <p>Track your warranties, stay alert before expiry, and store bill images safely.</p>

    <!-- Add Warranty Form -->
    <div class="section">
      <h2>‚ûï Add New Warranty</h2>
      <form action="/add-warranty" method="POST" enctype="multipart/form-data" class="grid">
        <input type="text" name="product" placeholder="Product Name" required />
        <input type="text" name="brand" placeholder="Brand Name" required />
        <input type="date" name="purchaseDate" required />
        <input type="number" name="warrantyPeriod" placeholder="Warranty (in months)" required />
        <textarea name="description" placeholder="Product Details (e.g. model, color, etc.)"></textarea>
        <input type="file" name="billImage" accept="image/*" />
        <button type="submit">Add Warranty</button>
      </form>
    </div>

    <% if (expiringSoon.length> 0) { %>
      <div class="section warning">
        <h2>‚ö†Ô∏è Expiring Soon (Within 30 Days)</h2>
        <ul>
          <% expiringSoon.forEach(item=> { %>
            <li class="card flex">
              <div>
                <div class="card-title">
                  <%= item.product %> ‚Äî <%= item.brand %>
                </div>
                <p>Expires on: <%= item.expiryDate.toDateString() %>
                </p>
              </div>
              <form action="/warranty/delete/<%= item._id %>" method="POST">
                <button class="delete-btn">‚ùå Delete</button>
              </form>
            </li>
            <% }) %>
        </ul>
      </div>
      <% } %>

        <div>
          <h2>üì¶ All Warranties</h2>
          <div class="grid">
            <% warranties.forEach(w=> { %>
              <div class="card">
                <% if (w.billImagePath) { %>
                  <img src="<%= w.billImagePath %>" alt="Product Bill" />
                  <% } %>
                    <div class="card-title">
                      <%= w.product %> ‚Äî <%= w.brand %>
                    </div>
                    <p>
                      <%= w.description %>
                    </p>
                    <p>Purchase: <%= w.purchaseDate ? new Date(w.purchaseDate).toDateString() : 'N/A' %>
                    </p>
                    <p>Expires: <%= w.expiryDate ? new Date(w.expiryDate).toDateString() : 'N/A' %>
                    </p>

                    <div class="flex">
                      <form action="/warranty/delete/<%= w._id %>" method="POST">
                        <button class="delete-btn">‚ùå Delete</button>
                      </form>
                    </div>
              </div>
              <% }) %>
          </div>
        </div>
  </div>

</body>

</html>